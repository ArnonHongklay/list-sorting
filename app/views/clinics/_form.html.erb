<%= form_with(model: clinic, local: true) do |form| %>
  <% if clinic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(clinic.errors.count, "error") %> prohibited this clinic from being saved:</h2>

      <ul>
      <% clinic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, id: :clinic_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :location, class: "col-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :location, id: :clinic_location, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :rating, class: "col-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.number_field :rating, id: :clinic_rating, min: 1, max: 5, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :verify, class: "col-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.check_box :verify, id: :clinic_verify, class: "form-control" %>
    </div>
  </div>

  <div>
  </div>
  <div class="form-group row">
    <%= form.label :flag, class: "col-2 col-form-label" %>
    <div class="col-sm-10">
      "recommended", "promotion", "default"
      <%= form.text_field :flag, id: :clinic_flag, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :image, class: "col-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :image, id: :clinic_image, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
